<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title> <%=title%> </title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>

    <%- include partials/navbar.ejs %>
  
<div class="col-md-12">
   <form action="/" method="get">
       <div class="form-group ad-30" style="margin-top:8px;">
            <div class="input-group search-style">
                <input class="form-control new-search-bar"  name="clubName" id="search" placeholder="Enter Your Club Name" type="text">
                <span class="input-group-btn">
                    <button class="btn input-btn" type="" id="search-form">Search</button>
                </span>
            </div>
        </div>
   </form>
</div>
  
<div class="col-md-12">
    <input type="hidden" id="name-user" name="name-user" value="<%= user.username %>">
    <input type="hidden" id="name-image" name="name-image" value="<%= user.userImage %>">
    <div class="">
        <div class="row">
            <div class="col-md-3">
                <div class="row">
                    <div class="col-md-12">
                        <div class="filter-container">
                            <div class="card">
                                <form action="/" method="get">
                                    <div class="content">
                                        <p class="filter">
                                            FILTER
                                        </p>
                                        <hr/>
                                        <select class="form-control" name="country" id="country" >
                                            <option value="">Filter By Country</option>
                                            <% country.map( (item, index) => { %>
                                                <option value="<%= item._id %>"><%= item._id %></option>
                                            <%})%>
                                        </select>
                                        <div class="clearfix"></div>
                                        <button class="btn btn-primary add-apply">Apply</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="col-md-9">
                <div class="row">
                    <% data.map( item => { %>
                    <div class="category-list col-md-3" style="margin-right: 10px;">
                        <div class="row">
                            <form action="/addFav" method="post" id="add-fav">
                                <div class="item">
                                    <a href="/group/<%= encodeURI(item.name) %>">
                                        <div class="thumbnail">
                                        <img src="http://localhost:8010/uploads/<%= item.image %>" style="width: 300px; height: 300px; object-fit: cover">
                                            <div class="caption">
                                                <h4>
                                                    <%= item.name.replace(/ /g, "-") %>
                                                    (<%= item.fans.length %>)
                                                </h4>
                                                
                                                <div class="row">
                                                    <div class="col-xs-12 col-md-6">
                                                        <p>
                                                            <%= item.country %>
                                                        </p>
                                                    </div>
                                                    
                                                    <div class="col-xs-12 col-md-6">
                                                        <input type="hidden" name="idClub" id="idClub" value="<%= item._id %>">
                                                        <input type="hidden" name="nameClub" id="nameClub" value="<%= item.name %>">
                                                        <button class="btn btn-primary add-fav">
                                                            Add To Favorite
                                                        </button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </a>
                                </div>
                            </form>
                        </div>
                    </div>
                    <%})%>
                </div>
            </div>
        </div>
    </div>
</div>

  
    
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>  
<script src="/socket.io/socket.io.js"></script>
<script src="/js/friend.js"></script>
<script src="/js/home.js"></script>
<script src="/js/global.js"></script>
</body>
</html>